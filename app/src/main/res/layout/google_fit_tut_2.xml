<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_2">

    <com.tupelo.wellness.view.NewTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Google fit"
        android:textColor="@color/white"
        android:id="@+id/textView9"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <com.tupelo.wellness.view.NewTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Walking Challenge will\nSync Automatically"
        android:textColor="@color/white"
        android:id="@+id/textView10"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="130dp" />
    <com.tupelo.wellness.view.NewButton
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:text="DONE"
        android:textColor="#28a9b1"
        android:textSize="16sp"/>

</RelativeLayout>