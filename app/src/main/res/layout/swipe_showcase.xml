<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    android:orientation="vertical">


    <com.tupelo.wellness.view.NewTextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Swipe down"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_above="@+id/textView3"/>

    <com.tupelo.wellness.view.NewTextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:text="to get updated stats"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <com.tupelo.wellness.view.NewTextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:drawablePadding="10dp"
        android:drawableBottom="@mipmap/swipe_down"
        android:text="on any of the tabs"
        android:textColor="@color/white"
        android:textSize="20sp" />


    <com.tupelo.wellness.view.NewButton
        android:id="@+id/btnD"
        style="@style/btn_sign_in"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        android:textColor="@color/black"
        android:text="OK"
        android:textSize="22sp" />



</RelativeLayout>